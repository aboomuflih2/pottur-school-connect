# Supabase Configuration
# Copy this file to .env and fill in your actual values

# Supabase Project URL
VITE_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anonymous Key (Public)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private - Server Side Only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration
DB_URL=your_database_connection_string_here
DB_HOST=your_database_host
DB_PORT=your_database_port
DB_NAME=your_database_name
DB_USER=your_database_username
DB_PASSWORD=your_database_password

# Application Environment
NODE_ENV=development

# Supabase Studio URL (Local Development)
SUPABASE_STUDIO_URL=http://localhost:54323

# Local Supabase Configuration (Development)
SUPABASE_DB_URL=postgresql://postgres:your_local_db_password@localhost:54322/postgres

# Authentication Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=3600

# Storage Configuration
SUPABASE_STORAGE_URL=your_storage_url_here

# Email Configuration (if using Supabase Auth)
SMTP_HOST=your_smtp_host
SMTP_PORT=your_smtp_port
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Site Configuration
SITE_URL=http://localhost:8080
REDIRECT_URL=http://localhost:8080

# API Keys (if needed)
API_KEY=your_api_key_here

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx

# Security
CORS_ORIGIN=http://localhost:8080

# Development Tools
VITE_DEV_PORT=8080
VITE_PREVIEW_PORT=4173